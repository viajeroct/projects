<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_main.xml"
    app:startDestination="@id/feedFragment">
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.viajero.androidtutorial.navigation.FeedFragment"
        android:label="FeedFragment" >
        <action
            android:id="@+id/action_feedFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/likesFragment"
        android:name="com.viajero.androidtutorial.navigation.LikesFragment"
        android:label="LikesFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.viajero.androidtutorial.navigation.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.viajero.androidtutorial.navigation.DetailFragment"
        android:label="DetailFragment" />
</navigation>
